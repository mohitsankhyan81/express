<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
    <%- include('../partials/nav') %>

<!-- Favorite Homes Section -->
<main class="max-w-7xl mx-auto px-6 py-12">
  <h2 class="text-3xl font-bold text-center mb-10 text-pink-600">💖 Favorite Homes</h2>
  <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <% registerHouse.forEach(function(home){ %>
      <li class="bg-pink-50 border border-pink-200 rounded-xl shadow-md overflow-hidden hover:shadow-xl hover:-translate-y-1 transition transform">
        <img src="<%= home.url %>" alt="Home Image" class="w-full h-56 object-cover">
        <div class="p-5">
          <h3 class="text-2xl font-bold text-pink-700 mb-2"><%= home.houseName %></h3>
          <p class="text-gray-700 mb-1"><span class="font-semibold">💰 Price:</span> $<%= home.price %></p>
          <p class="text-gray-700 mb-1"><span class="font-semibold">📍 Location:</span> <%= home.location %></p>
          <p class="text-gray-700"><span class="font-semibold">⭐ Rating:</span> <%= home.rating %></p>
        </div>
        <div class="flex gap-3 px-5 pb-5">
          <button class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">Remove</button>
        </div>
      </li>
    <% }); %>
  </ul>
</main>
</body>
</html>